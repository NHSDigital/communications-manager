<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
 This policy adds a CORS header to a request before it reaches the backend.

 CORS (Cross-origin resource sharing) allows JavaScript XMLHttpRequest (XHR) calls executed in a web page to interact with resources from non-origin domains.

 For more information, see the following resources:
    * https://docs.apigee.com/api-platform/develop/adding-cors-support-api-proxy
    * https://nhsd-confluence.digital.nhs.uk/pages/viewpage.action?pageId=193019458
-->
<AssignMessage async="false" continueOnError="false" enabled="true" name="AssignMessage.AddCors">
    <FaultRules/>
    <Properties/>
    <Set>
        <Headers>
            <Header name="Access-Control-Allow-Origin">{request.header.origin}</Header>
            <Header name="Access-Control-Allow-Headers">origin, x-requested-with, accept, content-type, nhsd-session-urid, x-correlation-id, authorization</Header>
            <Header name="Access-Control-Max-Age">3628800</Header>
            <Header name="Access-Control-Allow-Methods">GET, PUT, POST, PATCH, DELETE</Header>
        </Headers>
    </Set>
    <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
    <AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>
